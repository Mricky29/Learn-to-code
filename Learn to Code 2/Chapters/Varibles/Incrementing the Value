//Solution 3
var stepCounter = 0
func moveUP(){
    moveForward()
    stepCounter += 1
}

while stepCounter < 16{
    moveUP()
    if isOnGem{
        collectGem()
        gemCounter += 1
    }else if isBlocked{
        turnRight()
        
    }
}