//4 possible solutions


//solution 1
pinkPortal.isActive = false
bluePortal.isActive = false
var gemCounter = 0

while gemCounter < 4{
    moveForward()
    if isOnGem{
        collectGem()
        gemCounter += 1
    }
    if isBlocked{
        turnLeft()
        turnLeft()
        if bluePortal.isActive == true{
            bluePortal.isActive = false
        }else{
            bluePortal.isActive = true
            pinkPortal.isActive = true
        }
    }
}


